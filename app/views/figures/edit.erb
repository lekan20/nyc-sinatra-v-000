<h3>Edit <%=@figure.name%></h3>
<form action="/figures/<%=@figure.id%>" method="post">
<input type="hidden" name="_method" value="patch">

<label for="figure_name">Name:</label>
<input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
<br></br>

<h5>Edit Title(s)</h5>
<%Title.all.each do |title|%>
<input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="<%=title.name%>"
<%='checked' if @figure.titles.include?(title)%> > <%=title.name%> </input>
<%end%>

<h5>Or Create a New Title</h5>
<label for="new_title">New Title:</label>
<input type="text" name="title[name]" id="new_title">
<br></br>

<h5>Edit Landmark(s)</h5>
<%Landmark.all.each do |landmark|%>
<input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.name%>"
<%= 'checked' if @figure.landmarks.include?(landmark)%> > <%=landmark.name%> </input>
<%end%>
