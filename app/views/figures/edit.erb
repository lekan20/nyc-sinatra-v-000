<h3>Edit <%=@figure.name%></h3>
<form action="/figures/<%=@figure.id%>" method="post">
<input type="hidden" name="_method" value="patch">

<label for="figure_name">Name:</label>
<input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
<br></br>

<h5>Edit Title(s)</h5>
<%Titles.all.each do |title|%>
<input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="<%=title.name%>"
<%='checked' if @figure.titles.include?(title)%>> <%=title.name%></input>
<%end%>
